{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "imageTemplateName": {
            "type": "string"
        },
        "api-version": {
            "type": "string",
            "defaultValue": "2020-02-14"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "MSIResourceId": {
            "type": "string",
            "metadata": {
                "description": "Resource Id for the User Assigned Managed Service Identity to run the image build"
            }
        },
        "VMSize": {
            "type": "string",
            "defaultValue": "Standard_D2_v2"
        },
        "galleryImageResourceId": {
            "type": "string",
            "metadata": {
                "description": "Resource Id for the shared gallery image to distribute to"
            }
        },
        "runOutputName": {
            "type": "string",
            "metadata": {
                "description": "Run output name for image gallery"
            }
        },
        "imageReplicationRegion": {
            "type": "string",
            "metadata": {
                "description": "Azure region to replicate the shared gallery image"
            }
        }
    },

    "variables": {
    },


    "resources": [
        {
            "name": "[parameters('imageTemplateName')]",
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "apiVersion": "[parameters('api-version')]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {
                "imagebuilderTemplate": "AzureImageBuilderSIG",
                "userIdentity": "enabled"
            },
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[parameters('MSIResourceId')]": {}

                }
            },

            "properties": {
                "buildTimeoutInMinutes": 100,

                "vmProfile": {
                    "vmSize": "[parameters('VMSize')]",
                    "osDiskSizeGB": 0
                },

                "source": {
                    "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "office-365",
                    "sku": "20h1-evd-o365pp",
                    "version": "latest"

                },
                "customize": [
                                {
                "type": "PowerShell",
                "name": "Create temp directory",
                "inline": [
                    "mkdir -p c:\\Distribs"
                ]
            },
                            {
                "type": "File",
                "name": "Download Load-Apps.ps1",
                "sourceUri":"https://azminlandevops01.blob.core.windows.net/aib-scripts/Load-Apps.ps1?sp=r&st=2020-10-23T02:59:12Z&se=2020-10-23T03:59:12Z&spr=https&sv=2019-12-12&sr=b&sig=0tfz1cQwSsvWfpm6iOrC3q0zWC7HL1UWhTBnbXst3wQ%3D",
                "destination": "c:\\Distribs\\Load-Apps.ps1"
            },
                                        {
                "type": "File",
                "name": "Download Install-Apps.ps1",
                "sourceUri":"https://azminlandevops01.blob.core.windows.net/aib-scripts/Install-Apps.ps1?sp=r&st=2020-10-23T03:00:24Z&se=2020-10-23T03:59:24Z&spr=https&sv=2019-12-12&sr=b&sig=pFTtaV2qcfKgsnuzCgpd%2Bt4tRP9f6mx412hKHqMBin4%3D",
                "destination": "c:\\Distribs\\Install-Apps.ps1"
            },

                  {
                "type": "PowerShell",
                "name": "Download Persona Apps",
                "runElevated": true, 
                "inline": [
                    "powershell.exe -file c:\\Distribs\\Load-Apps.ps1"
                ]
            },
                  {
                "type": "PowerShell",
                "name": "Install Persona Apps",
                "runElevated": true, 
                "inline": [
                    "powershell.exe -file c:\\Distribs\\Install-Apps.ps1"
                ]
            }
                ],
                "distribute": [
                    {
                        "type": "SharedImage",
                        "galleryImageId": "[parameters('galleryImageResourceId')]",
                        "runOutputName": "[parameters('runOutputName')]",
                        "artifactTags": {
                            "source": "azureVmImageBuilder",
                            "baseosimg": "MicrosoftWindows10Desktop"
                        },
                        "replicationRegions": [
                            "[parameters('imageReplicationRegion')]"
                        ]
                    }
                ]
            }
        }


    ]
}
